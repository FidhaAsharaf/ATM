<%
=begin%>
 <h1>Sign Up</h1>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prevented this account from being saved:</h2>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @user, url: signup_path, method: :post, local: true do |form| %>
  <div class="field">
    <%= form.label :email %><br>
    <%= form.email_field :email, autofocus: true, required: true %>
  </div>

  <div class="field">
    <%= form.label :password %><br>
    <%= form.password_field :password, autocomplete: "new-password", required: true %>
  </div>

  <div class="field">
    <%= form.label :password_confirmation %><br>
    <%= form.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= form.submit "Create Account" %>
  </div>
<% end %> 
<%
=end%>
<h1 class="text-center my-4">Sign Up</h1>

<% if @user.errors.any? %>
  <div class="alert alert-danger">
    <h4><%= pluralize(@user.errors.count, "error") %> prevented this account from being saved:</h4>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="container">
  <div class="card p-4 shadow mx-auto" style="max-width: 500px;">
    <%= form_with model: @user, url: signup_path, method: :post, local: true do |form| %>
      
      <div class="mb-3">
        <%= form.label :email, class: "form-label" %>
        <%= form.email_field :email, class: "form-control", required: true %>
      </div>

      <div class="mb-3">
        <%= form.label :password, class: "form-label" %>
        <%= form.password_field :password, class: "form-control", required: true %>
      </div>

      <div class="mb-3">
        <%= form.label :password_confirmation, class: "form-label" %>
        <%= form.password_field :password_confirmation, class: "form-control" %>
      </div>

      <div class="d-grid">
        <%= form.submit "Create Account", class: "btn btn-primary btn-block" %>
      </div>

    <% end %>
  </div>
</div>

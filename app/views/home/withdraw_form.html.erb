<div class="container mt-5">

  <div class="text-center mb-4">
    <h1 class="fw-bold">Withdraw Money</h1>
  </div>

  <% if flash[:alert] %>
    <div class="alert alert-danger text-center">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <div class="card shadow p-4 mx-auto" style="max-width: 500px;">


    <%= form_with url: withdraw_path, method: :post, local: true do |form| %>

      <div class="mb-3">
        <%= form.label :amount, "Enter Amount to Withdraw", class: "form-label fw-semibold" %>
        <%= form.number_field :amount, min: 1, required: true, class: "form-control form-control-lg" %>
      </div>

      <div class="d-grid">
        <%= form.submit "Withdraw", class: "btn btn-success btn-lg text-white" %>
      </div>

    <% end %>


  </div>
</div>

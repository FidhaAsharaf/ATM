<h1>Transaction History</h1>

<table border="1" cellpadding="8">
  <tr>
    <th>Date</th>
    <th>Type</th>
    <th>Previous Balance</th>
    <th>Amount</th>
    <th>New Balance</th>
  </tr>

  <% @transactions.each do |t| %>
    <tr>
      <td><%= t.created_at.strftime("%d-%m-%Y %I:%M %p") %></td>
      <td><%= t.transaction_type.capitalize %></td>
      <td>₹<%= t.previous_balance %></td>
      <td>₹<%= t.amount %></td>
      <td>₹<%= t.new_balance %></td>
    </tr>
  <% end %>
</table>

<br>

